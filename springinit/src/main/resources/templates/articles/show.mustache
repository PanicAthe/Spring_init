{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}} <!--모델에 등록된 데이터 #으로 가져옴-->
        <tr>
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}} <!--이 범위까지 article 데이터 사용 가능-->
    </tbody>
</table>

<a href="/articles/{{article.id}}/edit" class="btn btn-dark">Edit</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-dark">Delete</a>
<a href="/articles" class="btn btn-dark">Go to Article List</a>

{{>comments/_comments}}

{{>layouts/footer}}